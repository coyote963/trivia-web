<!DOCTYPE html>
<html>
  <head>
    <title>Trivia</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <ul>
      <%= link_to 'New Question', '/questions/new', :class => 'navbar-link' %>
      <%= link_to 'Questions List', '/questions', :class => 'navbar-link' %>
      <%= link_to 'Make Room', '/rooms/new', :class => 'navbar-link' %>
      <%= link_to 'View Room', '/rooms/', :class => 'navbar-link' %>
      <% if user_signed_in? %>
          <p> Logged in as <strong><%= current_user.email %></strong></p>
          <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, :class => 'navbar-link' %>
      <% else %>
          <%= link_to 'Login', '/users/sign_in', :class => 'navbar-link' %>
          <%= link_to 'Sign Up', '/users/sign_up', :class => 'navbar-link' %>
      <% end %>
  </ul>

  <div class="container">
      <h1><%= yield :header %></h1>
    <%= yield %>
  </div>
</html>
